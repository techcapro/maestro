<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="Maestro.EmailConfirmationPage">
	<ContentPage.Content>
		<ScrollView>
			<StackLayout>
				<Image Source="maestro_logo.png" Margin="0,10,0,0" WidthRequest="200" HorizontalOptions="CenterAndExpand">
				</Image>
				<Label Text="Thank You!" Margin="0,40,0,0" FontAttributes="Bold" HorizontalOptions="Center" TextColor="#543669" FontSize="20">
				</Label>
				<Label Text="You have completed the verification process for HospitalName_MergeCode's Maestro mobile app" TextColor="#543669" FontSize="15" Margin="30,30,30,15">
				</Label>
				<Label Text="Click the button below to complete your Maestro profile." TextColor="#543669" FontSize="15" Margin="30,0,30,30">
				</Label>
				<Button Text="Get Started" x:Name="btnGetStarted" Clicked="btnGetStarted_Clicked" Margin="0,0,0,70" FontSize="20" TextColor="#543669" HorizontalOptions="Center" BackgroundColor="Transparent">
				</Button>
				<Label Text="Copyright © 2016 Applied Logic, Inc. All Rights Reserved." Margin="20" FontSize="14" FontAttributes="Bold" TextColor="#c7c9cb" HorizontalOptions="Center" HorizontalTextAlignment="Center">
				</Label>
			</StackLayout>
		</ScrollView>
	</ContentPage.Content>
</ContentPage>