<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="Maestro.MenuCell">
	<ContentView.Content>
		<StackLayout>
			<StackLayout Orientation="Horizontal" VerticalOptions="Center" Padding="20,8,20,8">
				<Image Source="{Binding ImgSource}" VerticalOptions="Center" />
				<Label Text="{Binding Title}" VerticalOptions="Center" />
			</StackLayout>
			<BoxView BackgroundColor="Purple" HeightRequest="8" />
		</StackLayout>
	</ContentView.Content>
</ContentView>